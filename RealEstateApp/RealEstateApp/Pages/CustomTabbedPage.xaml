<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.Pages.CustomTabbedPage"
             xmlns:local="clr-namespace:RealEstateApp.Pages"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             android:TabbedPage.ToolbarPlacement="Bottom"
             SelectedTabColor="#1d94ab"
             UnselectedTabColor="#78909c">

    <NavigationPage Title="Home" IconImageSource="home_icon" BarBackgroundColor="#1d94ab" BarTextColor="White">
        <x:Arguments>
            <local:HomePage />
        </x:Arguments>
    </NavigationPage>
    <local:BookmarksPage Title="Saved" IconImageSource="bookmark_icon"/>
    <local:SettingsPage Title="Settings" IconImageSource="settings_icon"/>
</TabbedPage>
